extends layout

block content
  h1.w3-center.mb-4 User List
  .table-responsive
    table.table.table-striped.table-hover.w3-card-4
      thead.w3-blue
        tr
          th Last Name
          th First Name
          th Date of Birth
          th Address 1
          th Address 2
          th City
          th Postal Code
          th Country
          th Phone Number
          th Email
          th Notes
      tbody
        each user in users
          tr
            td= user.lastName
            td= user.firstName
            td= user.dateOfBirth ? user.dateOfBirth.toISOString().split('T')[0] : 'N/A'
            td= user.address1
            td= user.address2 || 'N/A'
            td= user.city
            td= user.postalCode
            td= user.country
            td= user.phoneNumber
            td= user.email
            td= user.notes || 'N/A'